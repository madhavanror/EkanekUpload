<div class='bg-img'>
<h1>EKANEK</h1>
<div class="new-account">
<%= form_with model: @user, url: create_path, local: true, data: { turbo: false } do |form| %>
  <div id="new-register">
    <h3 class="text-center pt-5">Create new Account</h3>
    <ul>
      <% @user.errors&.full_messages&.each do |message| %>
        <li class="text-danger"><%= message %></li>
      <% end %>
    </ul>
    <div class="container">
    <div id="new-register-row" class="row justify-content-center align-items-center">
      <div id="new-register-column" class="col-md-6">
      <div id="new-register-box" class="col-md-12">

  <div class="form-group">
    <%= form.label  "First Name:", class: 'text-info' %>
    <%= form.text_field :first_name %>
  </div>

   <div class="form-group">
    <%= form.label  "Last Name:", class: 'text-info' %>
    <%= form.text_field :last_name %>
  </div>

   <div class="form-group">
    <%= form.label  "Email:", class: 'text-info' %>
    <%= form.text_field :email %>
  </div>

  <div class="form-group">
    <%= form.label  "Password:", class: 'text-info' %>
    <%= form.password_field :password %>
  </div>

  <div class="form-group">
    <%= form.label  "Password Confirmation:", class: 'text-info' %>
    <%= form.password_field :password_confirmation %>
  </div>
   <div class="form-group text-center">
      <%= link_to 'Back To Login', root_path, id: 'back-to-login', class: 'btn btn-sm btn-primary' %>
      <%= form.submit 'Submit', id: 'submit', class: 'btn btn-sm btn-primary' %>
    </div>

</div>
</div>
</div>
</div>
</div>
<% end %>
</div>
</div>
