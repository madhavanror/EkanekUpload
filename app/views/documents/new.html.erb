<div class='bg-img'>
<h1>EKANEK</h1>
<div class="document-page">
<%= form_with model: @document, url: documents_path, local: true, data: { turbo: false } do |form| %>
<div class='container'>
  <div id="new-document">
     <h3 class="text-center pt-5">Create new Document</h3><br>
     <div class="error text-center">
       <ul>
          <% @document.errors&.full_messages&.each do |message| %>
            <li class="text-danger"><%= message %></li>
          <% end %>
       </ul>
    </div>
    <div id="new-document-row" class="row justify-content-center align-items-center">
      <div id="new-document-column" class="col-md-6">
      <div id="new-document-box" class="col-md-12">

  <div class="form-group row">
    <%= form.label  "Title:", class: 'text-info' %>
    <div class="col-sm-8">
      <%= form.text_field :title , class:"form-control"%>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label  "Description:", class: 'text-info' %>
    <div class="col-sm-8">
      <%= form.text_area :description , class:"form-control rounded-0"%>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label  "Document:", class: 'text-info' %>
    <div class="col-sm-8">
      <%= form.file_field :doc , class:"form-control-file"%>
    </div>
  </div>
  <div class="form-group text-center">
    <%= link_to 'Back To Dashboard', documents_path, id: 'dashboard', class: 'btn btn-sm btn-primary' %>
    <%= form.submit 'Submit', id: 'doc-submit', class: 'btn btn-sm btn-primary' %>
  </div>
    </div>
    </div>

</div>
</div>
</div>
<% end %>
</div>
</div>
